/* pages/chat/chat.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
  padding: 10px;
  position: relative;
}

.message-list {
  flex: 1;
  margin-bottom: 10px;
  padding: 10px;
  position: absolute;
  top: 0;
  bottom: 50px; /* 留出输入框高度的空间 */
  left: 0;
  right: 0;
}

.message-item {
  display: flex;
  margin-bottom: 10px;
}

.message-item.right {
  flex-direction: row-reverse;
}

.message-item.right .message-bubble {
  background-color: #01A8BF;
  border-radius: 15px 0 15px 15px;
  color: #fff;
  margin-right: 10px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: #eee;
  margin-right: 10px;
}

.message-content {
  display: flex;
  flex-direction: column;
  max-width: 60vw;

}

.message-bubble {
  padding: 10px;
  background-color: #fff;
  border-radius: 0 15px 15px 15px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
}

.message-text {
  font-size: 16px;
  line-height: 1.5;
}

.message-time {
  font-size: 12px;
  margin-top: 5px;
  color: #999;
}

.input-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 10px;
  padding: 10px;
  margin-top: 10px;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px; /* 输入框高度 */
}

.input {
  flex: 1;
  border: none;
  outline: none;
  font-size: 16px;
}

.send-btn {
  background-color: #01A8BF;
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 5px 10px;
  font-size: 14px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.send-btn:hover {
  background-color: #3e8e41;
}
